<header>
  <div class="head-login container">
    <div class="row ">
      <div class="col-sm-2">
        <div class="logo" rel="">
          <a href="<%= root_path %>">
            <img src="<%= image_path 'logo_1.png' %>" alt="logo" class="img-responsive center-block" />
          </a>
        </div>
      </div>
      <div class="col-sm-8">
        <div id="Div1" class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-left nav-login">
            <li><span>欢迎登录</span></li>
          </ul>
        </div>
      </div>
      <div class="col-sm-2">
        <ul class="nav navbar-nav nav-login">
          <li><span>登录</span></li>
        </ul>
      </div>
    </div>
  </div>
</header>

<div class="holder body-login">
  <div class="login-holder">
    <div class="container container-login">
      <div class="panel panel-default panel-login">
        <h6 class="panel-title">登录</h6>
        <div class="panel-body">
          <form class="form-horizontal" role="form">
            <div class="row">
              <div class="col-sm-offset-1 col-sm-10 input-group">
                <span class="input-group-addon glyphicon glyphicon-user"></span>
                <input type="text" class="form-control" placeholder="输入用户名">
              </div>
            </div>
            <br />
            <div class="row">
              <div class="col-sm-offset-1 col-sm-10 input-group">
                <span class="input-group-addon glyphicon glyphicon-lock"></span>
                <input type="password" class="form-control" placeholder="输入密码">
              </div>
            </div>
            <br />
            <div class="row">
              <div class="form-group">
                <div class="col-sm-offset-1 col-sm-8">
                  <div class="checkbox">
                    <label>
                      <input type="checkbox">记住我
                    </label>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="form-group">
                <div class="col-sm-offset-1 col-sm-10">
                  <button type="submit" class="btn btn-login">登录</button>
                </div>
              </div>
            </div>
            <div class="form-group"; style="display:none">
              <div class="col-sm-offset-1 col-sm-10">
                <p class="text-danger">用户名或密码错误！</p> 
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<footer class="footer-login">
  <div class="">
  </div>
</footer>
